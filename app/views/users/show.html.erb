<% provide(:title, @user.name) %>
<div class="my__page">
  <div class="myprofile_content">
      <%= image_tag @user.icon_img.thumb.url %>
      <h1><%= @user.name %></h1>
      <%if logged_in? %>
        <% if current_user?(@user) || current_user.admin? %>
          <h3><%= @user.email %></h3>
          <p>(他ユーザーには表示されてません)</p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class="my_portfolio_content">
  <h1>投稿した作品</h1>
  <div class="container flexx">
    <div class="flex users__portfolio">
      <%= render partial: "/shared/portfolio_card", locals: {content: @portfolios} %>
    </div>
  </div>
</div>
