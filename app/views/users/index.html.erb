<% provide(:title, '全ユーザー') %>
<div class="container">
  <h1>全ユーザー</h1>
  <ul class="index__list users">
    <% @users.each do |user| %>
      <li>
        <%= image_tag user.icon_img.url %>
        <%= link_to user.name, user %> |
        <%= link_to "削除", user, method: :delete, data: { confirm: "[#{user.name}]を削除しますか？" } %>
      </li>
    <% end %>
  </ul>
</div>
